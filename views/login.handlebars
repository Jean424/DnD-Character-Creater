<form
  action="/user/login"
  method="POST"
  class="form-horizontal"
  id="form-login"
>

<form class="form-horizontal" id="form-login">
  <div class="form-group">
    <label
      for="email-login"
      class="col-sm-2 control-label text-warning"
    >Email:</label>
    <div class="col-sm-4">
      <input
        type="email"
        name="email"
        class="form-control bg-dark text-white"
        id="email-login"
        placeholder="Enter your email"
      />
    </div>
  </div>

  <div class="form-group">
    <label
      for="password-login"
      class="col-sm-2 control-label text-warning"
    >Password:</label>
    <div class="col-sm-4">
      <input
        type="password"
        name="password"
        class="form-control bg-dark text-white"
        id="password-login"
        placeholder="Enter your password"
      />
    </div>
  </div>

  <div>
    <button
      type="submit"
      href="/user/login"
      class="btn btn-warning"
      id="btn-login"
    >Login</button>
  </div>
</form>

{{! <script src="/js/login.js"></script> }}
